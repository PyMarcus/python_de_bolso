<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore=".PraticeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PraticeActivity">
        <View
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backbtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/navbar"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="@color/white"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_conditionals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/pratice_title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="@id/navbar"
            />

        <ImageView
            android:id="@+id/image1"
            app:layout_constraintTop_toTopOf="@id/navbar"
            app:layout_constraintBottom_toBottomOf="@id/navbar"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_3"
            tools:ignore="MissingConstraints" />


        <androidx.cardview.widget.CardView
            android:id="@+id/image_example1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/navbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="32dp"
                android:adjustViewBounds="true"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/normal"
                android:text="@string/question1"
                android:textColor="@color/orange"
                android:textSize="22sp"
                app:layout_constraintHorizontal_bias="0.0"/>

            <ImageView
                android:id="@+id/img1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:src="@drawable/question1"
                android:contentDescription="app logo"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/yes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:checked="false"
                android:backgroundTint="@color/checkboxUncheckedColor"
                android:buttonTint="@color/checkboxUncheckedColor"
                android:text="Sim"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

            <CheckBox
                android:id="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:checked="false"
                android:backgroundTint="@color/checkboxUncheckedColor"
                android:buttonTint="@color/checkboxUncheckedColor"
                android:text="Não"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/image_example2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/image_example1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textBase2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="32dp"
                android:adjustViewBounds="true"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/normal"
                android:text="@string/question2"
                android:textColor="@color/orange"
                android:textSize="22sp"
                app:layout_constraintHorizontal_bias="0.0"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:src="@drawable/question2"
                android:contentDescription="app logo"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/yes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:checked="false"
                android:backgroundTint="@color/checkboxUncheckedColor"
                android:buttonTint="@color/checkboxUncheckedColor"
                android:text="Sim"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

            <CheckBox
                android:id="@+id/no2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:checked="false"
                android:backgroundTint="@color/checkboxUncheckedColor"
                android:buttonTint="@color/checkboxUncheckedColor"
                android:text="Não"
                android:textSize="18sp"
                android:gravity="center_vertical"/>

        </androidx.cardview.widget.CardView>


        <ImageButton
            android:id="@+id/btn_check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/check"
            app:layout_constraintTop_toBottomOf="@id/image_example2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_check_24"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
