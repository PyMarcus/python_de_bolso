<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- texts-->
    <style name="startTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="slogan" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/italic</item>
    </style>

    <style name="MyTextInputEditTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="BottomNavigationView.TextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/color_selector</item>
    </style>

</resources>
